<p id="notice"><%= notice %></p>

<h1>Customers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phonenumber</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= customer.email %></td>
        <td><%= customer.phonenumber %></td>
        <td><%= link_to 'Show', customer %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td><%= link_to 'HARD Delete', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'SOFT Delete', softdelete_customers_path(:id => customer.id) , data: { confirm: 'Are you sure this delete will not delete Permanently' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

